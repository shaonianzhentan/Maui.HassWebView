<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HassWebView.Demo.MainPage"
             xmlns:hass="clr-namespace:HassWebView.Core;assembly=HassWebView.Core"
             Shell.NavBarIsVisible="False">
    <AbsoluteLayout x:Name="root">

        <hass:HassWebView 
                x:Name="wv"
                Source="http://debugx5.qq.com"
            
            AbsoluteLayout.LayoutFlags="All"
            AbsoluteLayout.LayoutBounds="0,0,1,1"/>

        <!-- 光标元素（可见鼠标） -->
        <Frame x:Name="cursor"
                 BackgroundColor="{StaticResource Primary}"
                 BorderColor="{StaticResource PrimaryDark}"
                 CornerRadius="10"
                 WidthRequest="20"
                 HeightRequest="20"
                 IsVisible="True"
                 AbsoluteLayout.LayoutFlags="None"
                 AbsoluteLayout.LayoutBounds="100,100,20,20"
                 Opacity="0.9"/>
    </AbsoluteLayout>
</ContentPage>
